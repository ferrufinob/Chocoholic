
<div class="signup-login">
<h1 class="headers">Sign In</h1>
  <p>New to Chocoholics?<%= link_to "Create an account", signup_path %></p>
  <%= form_for :user do |f| %>
    <div class="input-group">
      <%= f.label :email %>
      <%= f.email_field :email %> <br>
      <%= f.label :password %>
      <%= f.password_field :password %> <br>
      <%= f.submit "Sign In", class: "submit-btn" %>
      <p><%= link_to "Sign in with Google", "/auth/google_oauth2", method: "post" %></p>
    </div>
  <% end %>
</div>
